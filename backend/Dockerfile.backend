# Dockerfile.backend
#
# Lightweight Node.js base image
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files separately for better layer caching
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy rest of the backend source files
COPY . .

# Compile TypeScript to JavaScript
RUN npm run build

# Expose port for the Express app
EXPOSE 5000

# Start the application
CMD ["npm", "start"]
