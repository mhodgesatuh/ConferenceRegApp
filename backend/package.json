{
    "name": "conference-backend",
    "version": "0.1.0",
    "main": "dist/index.js",
    "scripts": {
        "clean": "rimraf dist",
        "clean:cache": "rimraf dist/tsconfig.build.tsbuildinfo",
        "build": "npm run clean && tsc -p tsconfig.build.json && npm run build:verify",
        "build:verify": "node -e \"require('fs').accessSync('dist/index.js'); console.log('Confirmed: dist/index.js present')\"",
        "prestart": "npm run build",
        "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
        "start": "NODE_ENV=production node --enable-source-maps -r module-alias/register dist/index.js",
        "start:debug": "NODE_ENV=production node --inspect=0.0.0.0:9229 --enable-source-maps -r module-alias/register dist/index.js",

        "test": "vitest --config vitest.config.ts",
        "test:watch": "vitest --config vitest.config.ts --watch",
        "test:ci": "vitest run --config vitest.config.ts --reporter=dot",
        "test:debug": "node --inspect=0.0.0.0:9230 node_modules/vitest/vitest.mjs --config vitest.config.ts --watch",
        "typecheck": "tsc -p tsconfig.vitest.json --noEmit",
        "typecheck:app": "tsc -p tsconfig.build.json --noEmit",

        "db:push": "drizzle-kit push",
        "db:generate": "drizzle-kit generate",
        "studio": "DB_HOST=127.0.0.1 drizzle-kit studio --host=127.0.0.1 --port=3337"
    },
    "_moduleAliases": {
        "@": "dist",
        "multer": "dist/vendor/multer"
    },
    "dependencies": {
        "body-parser": "^1.20.2",
        "compression": "^1.8.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "csurf": "^1.11.0",
        "dotenv": "^16.3.1",
        "drizzle-orm": "^0.44.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.3.0",
        "gel": "^2.1.1",
        "helmet": "^8.1.0",
        "module-alias": "^2.2.3",
        "mysql2": "^3.0.0",
        "tslog": "^4.9.1"
    },
    "devDependencies": {
        "@types/compression": "^1.8.1",
        "@types/cookie-parser": "^1.4.9",
        "@types/cors": "^2.8.18",
        "@types/csurf": "^1.11.5",
        "@types/express": "^4.17.23",
        "@types/node": "^24.3.0",
        "@types/supertest": "^2.0.0",
        "drizzle-kit": "^0.31.1",
        "rimraf": "^6.0.1",
        "supertest": "^7.1.4",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.3",
        "vitest": "^3.2.4"
    }
}
