{
    "compilerOptions": {
        "strict": true,
        "noEmit": false,

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "incremental": true,

        "types": ["node"],
        "typeRoots": ["./node_modules/@types", "./src/types"],

        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "multer": ["src/vendor/multer"]
        },

        "lib": ["ESNext"],
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",

        "rootDir": "src",
        "outDir": "dist"
    }
}
