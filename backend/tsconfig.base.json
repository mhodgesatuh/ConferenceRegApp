{
    "compilerOptions": {
        "strict": true,
        "noEmit": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "incremental": true,
        "baseUrl": ".",
        "paths": { "@/*": ["src/*"] },
        "lib": ["ESNext"],
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist"
    }
}
