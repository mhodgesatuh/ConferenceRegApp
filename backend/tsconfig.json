{
    "compilerOptions": {
        "strict": true,
        "noEmit": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "incremental": true,
        "baseUrl": ".",
        "paths": { "@/*": ["src/*"] },

        "lib": ["ESNext"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2020",
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "src/tests"]
}
