{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "noEmit": true,

        // Node backend tests
        "target": "ES2022",
        "lib": ["ES2022"],

        // CJS runtime for backend tests
        "module": "CommonJS",
        "moduleResolution": "node",

        // Allow src/ and tests/ side-by-side
        "rootDir": ".",

        // Path aliases for IDE + Vitest
        "baseUrl": ".",
        "paths": { "@/*": ["src/*"] },

        // Vitest + Node types in test files ONLY
        "types": ["node", "vitest/globals"],

        // Sensible defaults
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": ["src", "tests", "vitest.config.ts"],
    "exclude": ["node_modules", "dist"]
}
