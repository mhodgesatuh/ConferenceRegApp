{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        // Make tests fast & side effect free
        "noEmit": true,

        // Tighten target/libs for Node backend tests
        "target": "ES2022",
        "lib": ["ES2022"],

        // Match backend runtime to avoid CJS/ESM surprises
        "module": "CommonJS",
        "moduleResolution": "node",

        // Paths/aliases for IDE + Vitest (Vitest uses tsconfig for path mapping)
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },

        // Useful for Vitest + Node types in test files
        "types": ["node", "vitest/globals"],

        // Sensible defaults
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "vitest.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
