{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        // test-only: compile but don't emit
        "noEmit": true,

        // Node backend tests
        "target": "ES2022",
        "lib": ["ES2022"],

        // CJS runtime for backend tests
        "module": "CommonJS",
        "moduleResolution": "node",

        // Allow src/ and tests/ side-by-side
        "rootDir": ".",

        // Path aliases for IDE + Vitest
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },

        // Useful for Vitest + Node types in test files
        "types": ["node", "vitest/globals"],

        // Sensible defaults
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "vitest.config.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
