{
    "name": "conference-frontend",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "tsc -p tsconfig.json --noEmit && tsc -p tsconfig.node.json --noEmit && vite build",
        "preview": "vite preview",

        "test": "vitest",
        "test:watch": "vitest --watch",
        "test:ci": "vitest run --reporter=dot",

        "typecheck": "tsc -p tsconfig.json --noEmit",
        "typecheck:node": "tsc -p tsconfig.node.json --noEmit",
        "typecheck:all": "npm run typecheck && npm run typecheck:node",

        "db:generate": "drizzle-kit generate",
        "studio": "drizzle-kit studio --host=127.0.0.1 --port=3337"
    },
    "dependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^6.23.1",

        "@tanstack/react-query": "^5.45.0",
        "@tanstack/react-table": "^8.16.0",

        "lucide-react": "^0.448.0",
        "class-variance-authority": "^0.7.0",
        "tailwind-variants": "^0.2.1",

        "react-hook-form": "^7.53.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "@vitejs/plugin-react": "^4.5.2",
        "vitest": "^3.2.4",

        "@types/node": "^24.0.3",
        "postcss": "^8.4.41",
        "autoprefixer": "^10.4.20",
        "tailwindcss": "^3.4.9",

        "dotenv-cli": "^8.0.0",

        "drizzle-kit": "^0.31.4",
        "mysql2": "^3.14.1"
    }
}
